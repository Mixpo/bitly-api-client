<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>[%d{dd.MM.yyyy HH:mm:ss.SSS}] %-5level %-16.16thread{16} %-48.48logger{48} %msg %ex%n</Pattern>
		</encoder>
	</appender>


	<logger name="net.swisstech" level="DEBUG" />

	<root level="ERROR">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>